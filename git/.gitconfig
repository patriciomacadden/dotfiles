[alias]
	co = checkout
	ci = commit
	l = log --oneline
	st = status
	purge = "!git branch --merged | grep -v \"\\*\" | grep -v master | xargs -n 1 git branch -D"

[color "diff"]
	meta = yellow bold

[credential]
	helper = cache

[pull]
	ff = only

[push]
	default = simple

